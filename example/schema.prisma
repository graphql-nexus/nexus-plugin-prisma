datasource db {
  provider = "sqlite"
  url      = "file:db/next.db"
  default  = true
}

generator photon {
  provider = "photonjs"
  output   = "node_modules/@generated/photon"
}

model Blog {
  id        Int      @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  viewCount Int
  posts     Post[]
  authors   Author[]
}

model Author {
  id    Int     @id
  name  String?
  posts Post[]
  blog  Blog
}

model Post {
  id    Int      @id
  title String
  tags  String[]
  blog  Blog
}