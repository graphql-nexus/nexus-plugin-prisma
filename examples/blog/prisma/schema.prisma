datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
}

generator photon {
  provider = "photonjs"
}

model Blog {
  id        Int      @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  viewCount Int      @default(0)
  posts     Post[]
  authors   User[]
}

model User {
  id        Int       @id
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  name      String?
  posts     Post[]
  comments  Comment[]
  blog      Blog
  rating    Float
  role      UserRole
}

model Comment {
  id      Int    @id
  content String
}

enum UserRole {
  ADMIN
  AUTHOR
}

model Post {
  id       Int        @id
  title    String
  comments Comment[]
  tags     String[]
  blog     Blog
  status   PostStatus
}

enum PostStatus {
  DRAFT
  PUBLISHED
}